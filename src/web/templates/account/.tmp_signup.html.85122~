<script type="text/javascript">
	$('#username').focus(function() {
		$('#username_err').remove();
	})
	$('#username').blur(function() {
		if (this.value != '') {
			tmpValue	= this.value;
			$.getJSON("http://localhost:8080/account/validatedusername/" + tmpValue, 
				function(data) {
	  				$.each(data, function(key, val) {
						if (key == 'available') {
							if (val == 'No') {
								$("input#username").after('<p id="username_err">"' + tmpValue + '" is not available</p>');
								$('#username').val('');
							} else {
								$('#username_err').remove();
							}
						}
	  				});
				});			
		}
	});
	
</script>
<script type="text/javascript"> 
	var field1 = new LiveValidation( 'username', {onlyOnSubmit: true} );
	field1.add( Validate.Presence, { minimum: 4, validMessage: "OK", failureMessage: "Required"} );
	var field2 = new LiveValidation( 'password', {onlyOnSubmit: true} );
	field2.add( Validate.Presence, { minimum: 4, validMessage: "OK", failureMessage: "Required"} );
	var field3 = new LiveValidation( 'email', {onlyOnSubmit: true } );
	field3.add( Validate.Email, { validMessage: "OK", failureMessage: "Invalid Email"} );
	var field4 = new LiveValidation( 'firstname', {onlyOnSubmit: true} );
	field4.add( Validate.Presence, {failureMessage: "Required"} );
	
	var automaticOnSubmit = field1.form.onsubmit;          
	field1.form.onsubmit = function(){	          
		var valid = automaticOnSubmit();
	}	          
</script>  
